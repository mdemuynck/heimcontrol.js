div.container
  h1 Settings
  h2 RCSend
  div.row16
    form(action="/settings/rcsend", method="post")
      div#rcsend
        each item, i in items
          div.plugin-container.rcsend.settings(id="#{item._id}")
            button.btn.btn-danger.pull-right.delete(type="button",data-delete="#{item._id}")
              i.icon-trash.icon-large
              |  Delete
            label(for="description") Description (optional):
            input(type="text", name="data[#{i}][description]", placeholder="Light", value=(item.description ? item.description : ''))
            label(for="type") Type:
            input(type="text", name="data[%i%][type]", value="#{item.type}")
            label(for="value") Command (optional):
            input(type="text", name="data[#{i}][value]", value=(item.value ? item.value : ''))           
            br
            br            
            input(type="hidden", name="data[#{i}][_id]", value="#{item._id}")

          
      p.rcsend.buttons
        button.btn.btn-info.add(data-target="rcsend", type="button", data-callback="") 
          i.icon-plus.icon-large
          |  Add
      
        button.btn.btn-success.save(type="submit") 
          i.icon-save.icon-large
          |  Save
 
 input(type="hidden", name="iterator", id="iterator", value=(items.length))
      
div.plugin-container.rcsend.settings#template(style="display: none;")
  button.btn.btn-danger.pull-right.delete(type="button")
    i.icon-trash.icon-large
    |  Delete
  label(for="description") Description (optional):
  input(type="text", name="data[%i%][description]", placeholder="Light")
  label(for="type") Type:
  input(type="text", name="data[%i%][type]", placeholder="ir")
  label(for="value") Command:
  input(type="text", name="data[%i%][value]")
